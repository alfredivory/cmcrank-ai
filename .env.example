# CMCRank.ai Environment Configuration
# Copy to .env.local for development, .env.production for prod, .env.staging for staging
# NEVER commit actual values - this file is a template only

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/cmcrank_dev"
# Production: postgresql://user:password@localhost:5432/cmcrank_prod
# Staging: postgresql://user:password@localhost:5432/cmcrank_staging

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# CoinMarketCap API - https://coinmarketcap.com/api/
CMC_API_KEY="your_cmc_api_key_here"

# OpenRouter API - https://openrouter.ai/ (for AI research)
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# Default AI model for research (OpenRouter model ID)
AI_MODEL="anthropic/claude-sonnet-4"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"
# Production: https://cmcrank.ai
# Staging: https://staging.cmcrank.ai

# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Comma-separated list of initial admin emails (auto-admin on first login)
INITIAL_ADMINS="alex.shevchenko@defuse.org,alfred.ivory@defuse.org"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_FLAG_WATCHLISTS=false
FEATURE_FLAG_ALERTS=false
FEATURE_FLAG_CORRELATION=false

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV="development"
# Production: production
# Staging: staging

# Logging level: debug, info, warn, error
LOG_LEVEL="debug"
# Production: info

# Daily research credit limit per user
RESEARCH_CREDITS_PER_DAY=5

# CMC data ingestion time (24h format, UTC)
CMC_INGESTION_HOUR=6

# =============================================================================
# PORTS (for Docker Compose)
# =============================================================================
APP_PORT=3000
# Staging: 3001
